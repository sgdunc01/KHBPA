@{
    ViewBag.Title = "Contact";
}
<head>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>

<div class="container">
  <div class="row" style="margin: 3% 0">
    <div class=" col-sm-8 col-lg-offset-2" style="background-color: #18bc9c !important;">
      <h1 class="display-3 text-primary text-uppercase">@ViewBag.Title</h1>
    </div>
    <div class="well col-sm-8 col-lg-offset-2" style="background: rgba(236, 240, 241, 0.85); border-radius: 5px; box-shadow: rgba(175,175,175, 0.5) 3px 3px 5px">
      <div class="col-md-12">
        <div class="col-md-6" style="margin-top: 1%">
          <table style="text-align:right">
            <tr><th><font color=black>Kentucky HBPA</font></th>
            <tr><th><font color=black>3729 S. Fourth St.</font></th>
            <tr><th><font color=black>Louisville, KY 40214-1712</font></th>
            <tr><th><font color=black>Monday - Friday 8:30am - 4pm</font></th>
            <tr><th><font color=black>Kentuckyhbpa@gmail.com</font></th>
            <tr><th><font color=black>Phone: 502-363-1077</font></th>
            <tr><th><font color=black>OR EMAIL US THROUGH OUR WEBSITE</font></th>
          </table>
            <style>
                #map {
                    height: 400px;
                    width: 100%;
                }
            </style>
            <h3>Map</h3>
            <div id="map"></div>
            <script>
                function initMap() {
                    var KHBPA = { lat: 38.202796, lng: -85.765716 };
                    var map = new google.maps.Map(document.getElementById('map'), {
                        zoom: 13,
                        center: KHBPA                       
                    });
                    var marker = new google.maps.Marker({
                        position: KHBPA,
                        map: map,
                        title: 'KHBPA',
                        url: "http://www.google.com"                                                
                    });                                        
                    

                    $('#map').click(function () {
                        window.open('https://www.google.com/maps/dir//Kentucky+HBPA,+3729+S+4th+St,+Louisville,+KY+40214');
                    });
                    
                }
                
            </script>           
            <script async defer
                    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBum-emU4mSkyGcdEO3Pvljibm8VlI05L4&callback=initMap">
            </script>
                                                                       
    
        </div>
        <form class="col-md-6" action="mailto:agudgel489@gmail.com" method="POST">
          <div class="panel-body">
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user blue"></i></span>
                <input style="width: 100%" type="text" name="InputName" placeholder="Name" class="form-control" autofocus="autofocus" required>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope blue"></i></span>
                <input style="width: 100%" type="email" name="InputEmail" placeholder="Email" class="form-control" required>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-phone blue"></i></span>
                <input style="width: 100%" type="number" name="InputCno" placeholder="Phone" class="form-control" required>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-comment blue"></i></span>
                <textarea style="width: 100%" name="InputMessage" rows="6" class="form-control" type="text" required></textarea>
              </div>
            </div>
            <div class="col-md-12">
              <button type="submit" class="btn btn-info pull-right">Send <span class="glyphicon glyphicon-send"></span></button>
              <button type="reset" value="Reset" name="reset" class="btn">Reset <span class="glyphicon glyphicon-refresh"></span></button>              
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
