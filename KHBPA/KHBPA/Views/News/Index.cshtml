@model IEnumerable<KHBPA.Models.News>
@{
    ViewBag.Title = "News Articles";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
<link rel="stylesheet" href="~/Content/SocialMediaIcons.css" type="text/css" />


<div class="container">
  <div class="row" style="margin: 3% 0">
    <div class="col-md-6 col-xs-10 col-xs-offset-1 col-md-offset-0">
      <div class=" col-sm-12" style="background-color: #18bc9c !important;">
        <h1 class="display-3 text-primary text-uppercase">@ViewBag.Title</h1>
      </div>
      <div class="well col-sm-12" style="background: rgba(236, 240, 241, 0.85); border-radius: 5px; box-shadow: rgba(175,175,175, 0.5) 3px 3px 5px">
        <p>
          @Html.ActionLink("Add New Article", "Create")
        </p>
        <table class="table">
          @*<tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArticleUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UploadDate)
                </th>
                <th></th>
            </tr>*@
          @foreach (var item in Model)
          {
            <tr>
              <td>
                <img src="@Url.Content(item.ImageUrl)" style="width:200px; height:200px;" />
              </td>
              <td>
                <a href="@Url.Content(item.ArticleUrl)">@Html.DisplayFor(modelItem => item.Title)</a>
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.UploadDate)
              </td>
              <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
              </td>
            </tr>
          }
        </table>

      </div>


      @*<img style="width: 100%; border: solid black 1px" src="~/Content/Images/TwitterFeed.png" />*@
    </div>
    @*Twitter*@
    <div class="col-md-6 col-xs-10 col-xs-offset-1 col-md-offset-0" align="center" style="margin-bottom: 25px;">
      <a class="twitter-timeline" data-height="500" href="https://twitter.com/KyHBPA?ref_src=twsrc%5Etfw">Tweets by KyHBPA</a>
      <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>
  </div>
</div>



