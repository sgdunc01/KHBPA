@model KHBPA.Models.Document

@{
    ViewBag.Title = "Delete";
}
<h2 style="margin-left:3%">Are you sure you want to remove this photo?</h2>
<hr />
<div style="margin-left:3%">

    <dl class="dl-horizontal">
        <dt>
           <img src="@(string.Format("data:image/gif;base64,{0}",Convert.ToBase64String(Model.FileBytes)))" style="max-width:100%;" />
        </dt>
        <dd></dd>
        <dt >

        </dt>
        <dd></dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
