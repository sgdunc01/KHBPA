@model KHBPA.Models.Post

@{
    ViewBag.Title = "Edit";
}
<script src="~/Scripts/tinymce/tinymce.min.js"></script>
<script>tinymce.init({ selector:'textarea' });</script>
<div class="container">
    <div class="row" style="margin: 3% 0">
        <div class=" col-sm-10 col-sm-offset-1" style="background-color: #18bc9c !important;">
            <h1 class="display-3 text-primary text-uppercase">@ViewBag.Title</h1>
        </div>
        <div class="well col-sm-10 col-sm-offset-1" style="background: rgba(236, 240, 241, 0.85); border-radius: 5px; box-shadow: rgba(175,175,175, 0.5) 3px 3px 5px">
            <div class="form-horizontal">
                <form action="@Href("~/Posts/Update")" method="post" id="postForm">
                    @if (Model.ID != -1)
                    {
                        <input type="hidden" name="id" value="@Model.ID" />
                    }
                    <div class="form-group">
                        @Html.LabelFor(model => model.DateTime, htmlAttributes: new { @class = "control-label col-md-2" })
                        @{ DateTime dateTime = Model.DateTime.Year > 2000 ? Model.DateTime : DateTime.Now;}
                        <div class="col-md-10">
                            <input type="text" name="dateTime" value="@dateTime" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" name="title" value="@Model.Title" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Tags, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" name="tags" value="@ViewBag.Tags" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <textarea name="body" rows="10" cols="80">@Model.Body</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" name="submit" value="Submit" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
            </div>
</div>
    </div>


            <div>
                <button type="button" class="btn btn-primary">@Html.ActionLink("Back to list", "Index")</button>
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
