@model IEnumerable<KHBPA.Models.Resources>

@{
    ViewBag.Title = "Resources and Benefits";
}

<div class="container">
  <div class="row" style="margin: 3% 0">
    <div class=" col-sm-10 col-sm-offset-1" style="background-color: #18bc9c !important;">
      <h1 class="display-3 text-primary text-uppercase">@ViewBag.Title</h1>
    </div>
    <div class="well col-sm-10 col-sm-offset-1" style="background: rgba(236, 240, 241, 0.85); border-radius: 5px; box-shadow: rgba(175,175,175, 0.5) 3px 3px 5px">
      <p>
        <!--if(Roles.IsUserInRole("Admin"))-->

        @Html.ActionLink("Create New", "Create")

      </p>
      <table class="table">
        <tr>
          <th>Resources</th>
        </tr>

        @foreach (var item in Model)
        {
          <tr>
            <!--<td>
            Html.DisplayFor(modelItem => item.ResourceType)
        </td>-->
            @if (item.ResourceType == 1)
            {
              <td>
                @Html.DisplayFor(modelItem => item.ResourceName)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.ResourceDesc)
              </td>
        <!--if (Roles.IsUserInRole("Admin"))-->

              <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
              </td>
            }

          </tr>
        }

      </table>
      <table class="table">
        <tr>
          <!--<th>
          Html.DisplayNameFor(model => model.ResourceType)
      </th>
