@model IEnumerable<KHBPA.Models.Resources>

@{
    ViewBag.Title = "Polls";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
<link rel="stylesheet" href="~/Content/SocialMediaIcons.css" type="text/css" />
<link rel="stylesheet" href="~/Content/PollingCSS.css" type="text/css" />


<div class="container">
    <div class="row" style="margin: 3% 0">
        <div class=" col-sm-10 col-sm-offset-1" style="background-color: #18bc9c !important;">
            <h1 class="display-3 text-primary text-uppercase">@ViewBag.Title</h1>
        </div>
        <div class="well col-sm-10 col-sm-offset-1" style="background: rgba(236, 240, 241, 0.85); border-radius: 5px; box-shadow: rgba(175,175,175, 0.5) 3px 3px 5px">
            <div class="row">
                <form action="https://docs.google.com/forms/d/e/1FAIpQLSdqelNNtPyAMdC1PCM0RzNQPV8lwY0FvhoZWFGfICrlacJE8w/formResponse">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                Do you favor or oppose more restrictions on pre-race medicine testing?
                            </h3>
                        </div>

                        <div class="panel-body">
                            <div class="input-wrap">
                                <input type="radio" name="entry.1275145631" id="c1" value="Favor" />
                                <label for="c1">Favor</label>
                            </div>

                            <div class="input-wrap">
                                <input type="radio" name="entry.1275145631" id="c2" value="Neutral" />
                                <label for="c2">Neutral</label>
                            </div>

                            <div class="input-wrap">
                                <input type="radio" name="entry.1275145631" id="c3" value="Oppose" />
                                <label for="c3">Oppose</label>
                            </div>
                        </div>

                        <input class="button" type="submit" value="Submit">

                    </div>
                </form>
            </div>
        </div>


    </div>

</div>