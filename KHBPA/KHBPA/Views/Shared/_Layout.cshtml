<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - Kentucky Horsemens Benevolent and Protective Association</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
  <script src="https://www.paypalobjects.com/api/checkout.js"></script>
</head>
<body>
  <div class="background">
    <div class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <b>@Html.ActionLink("Kentucky HBPA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</b>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" data-toggle="dropdown" class="dropdown-toggle">About Us<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li>@Html.ActionLink("About KHBPA", "About", "Home")</li>
                <li>@Html.ActionLink("Board Of Directors", "BoardOfDirectors", "Home")</li>
              </ul>
            </li>
            @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
            <li>@Html.ActionLink("Resources", "index", "Resources")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            <li>@Html.ActionLink("News and Events", "Index", "News")</li>
            <li>@Html.ActionLink("Blog", "Index", "Blog")</li>
            <li>@Html.ActionLink("Admin", "Index", "UserManagement")</li>
            <li><h4 style="padding-top: 5%"><strong><a href="http://paypal.com" target="_blank" rel="nofollow"><img src="https://www.paypal.com/en_US/i/btn/x-click-but21.gif" alt="" /></a></strong></h4></li>
          </ul>
          @Html.Partial("_LoginPartial")
        </div>
      </div>
    </div>
    <div class="container body-content">
      @RenderBody()
      <hr />
      <footer>

        <div style="overflow: auto; margin: 0 5%; padding: 0">
          <span>&copy; @DateTime.Now.Year - KY HBPA</span>
          <h4 style="float: right; margin: 0 2% 2% 2%; padding: 0"><strong><a href="http://paypal.com/" target="_blank" rel="nofollow"><img src="https://www.paypal.com/en_US/i/btn/x-click-but21.gif" alt="" /></a></strong></h4>
        </div>

      </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
  </div>
</body>
</html>
