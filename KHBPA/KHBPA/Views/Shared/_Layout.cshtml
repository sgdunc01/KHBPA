            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="@Url.Action("Index", "Home")" class="navbar-brand">
            <img style="margin-top: -10px" class="img-responsive" src="~/Content/Images/KYHBPA-Logo2.png" title="home" />
          </a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" data-toggle="dropdown" class="dropdown-toggle">About Us<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li>@Html.ActionLink("About KHBPA", "About", "Home")</li>
                <li>@Html.ActionLink("Board Of Directors", "BoardOfDirectors", "Home")</li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" data-toggle="dropdown" class="dropdown-toggle">Membership<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li>@Html.ActionLink("Benefits", "Index", "Resources")</li>
                <li>@Html.ActionLink("Polls", "Polls", "Resources")</li>
                <li>@Html.ActionLink("Documents", "Index", "Document")</li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" data-toggle="dropdown" class="dropdown-toggle">News<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li>@Html.ActionLink("News", "Index", "News")</li>
                <li>@Html.ActionLink("Blog", "Index", "Posts")</li>
                <li>@Html.ActionLink("Calendar", "Index", "EventCalendar")</li>
              </ul>
            <li>@Html.ActionLink("Photo Gallery", "Index", "PhotoGallery")</li>
            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
            @{
                if (User.IsInRole("Admin") || User.IsInRole("Member"))
                {
                  <li>@Html.ActionLink("User Management", "Index", "UserManagement")</li>
                }
            }
            <li>
              <a target="_blank" href="https://www.paypal.com">
                <span class="headerDonateButton">Donate</span>
              </a>
            </li>
          </ul>
          @Html.Partial("_LoginPartial")
        </div>
      </div>
    </div>
    <div>
      @RenderBody()
    </div>
    <hr />
    <footer>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-4">
            <p class="small" style="font-weight: bold;">
              &copy; @DateTime.Now.Year - Kentucky Horsemen's Benevolent and Protective Association
            </p>
            <p class="small">
